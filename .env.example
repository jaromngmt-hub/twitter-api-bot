TWITTERAPI_KEY=your_twitterapi_io_key_here
OPENAI_API_KEY=your_openai_api_key_here

DATABASE_PATH=./monitor.db
CHECK_INTERVAL_SECONDS=3600
MAX_TWEETS_PER_CHECK=20
LOG_LEVEL=INFO

# Tiered Discord Webhooks (for AI rating system)
# Tier 2 (Score 4-6): Standard updates
DISCORD_WEBHOOK_TIER2=https://discord.com/api/webhooks/xxx/yyy
# Tier 3 (Score 7-8): Premium alpha
DISCORD_WEBHOOK_TIER3=https://discord.com/api/webhooks/xxx/yyy
# Tier 4 (Score 9-10): Urgent alerts
DISCORD_WEBHOOK_TIER4=https://discord.com/api/webhooks/xxx/yyy
# INTERESTING channel (user-approved tweets from WhatsApp)
DISCORD_WEBHOOK_INTERESTING=https://discord.com/api/webhooks/xxx/yyy

# AI Analysis Settings
ENABLE_AI_ANALYSIS=true
AI_MIN_SCORE_TO_SEND=4

# URGENT NOTIFICATIONS (Score 8-10 â†’ your phone!)
URGENT_NOTIFICATIONS_ENABLED=false
URGENT_MIN_SCORE=8

# ============================================
# TELEGRAM (RECOMMENDED - FREE!)
# ============================================
# 1. Message @BotFather on Telegram
# 2. Create new bot: /newbot
# 3. Copy the token below
# 4. Message @userinfobot to get your chat ID
USE_TELEGRAM=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# 5. Set webhook: POST https://api.telegram.org/bot<TOKEN>/setWebhook
#    URL: https://your-app.onrender.com/api/webhook/telegram

# ============================================
# TWILIO (WhatsApp/SMS) - EXPENSIVE BACKUP ($0.04/msg)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio number
YOUR_PHONE_NUMBER=+1234567890     # Your real phone number

# Pushover - https://pushover.net
PUSHOVER_APP_TOKEN=your_app_token
PUSHOVER_USER_KEY=your_user_key

# GitHub (for Build Agent - creates repos automatically)
GITHUB_TOKEN=ghp_xxxxxxxxxxxx
GITHUB_USERNAME=your_github_username

# AI Models (OpenRouter - access to ALL models!)
# Get key: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxx

# ðŸ¤– SMART MODEL ROUTING:
# Kimi K2 = Analysis & Planning (excellent reasoning)
# Qwen Coder = Code generation (40x cheaper, great code)
